@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section text-white text-center py-5" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/img/banner.jpg') center/cover; min-height: 400px;">
        <h1 class="display-3 fw-bold">Chào mừng đến với Shop Online</h1>
        <p class="lead">Khám phá hàng ngàn sản phẩm với giá tốt nhất!</p>
        <a href="/Products/Create" class="btn btn-primary btn-lg mt-3">Them san pham</a>
    </div>

    <section class="my-5">
        <h2 class="text-center mb-4">Danh mục sản phẩm</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="/img/category1.jpg" class="card-img-top" alt="Sản phẩm 1">
                    <div class="card-body">
                        <h5 class="card-title">Thời trang</h5>
                        <p class="card-text">Bộ sưu tập thời trang hot nhất.</p>
                        <a href="#" class="btn btn-outline-primary">Xem ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="/img/category2.jpg" class="card-img-top" alt="Sản phẩm 2">
                    <div class="card-body">
                        <h5 class="card-title">Đồ điện tử</h5>
                        <p class="card-text">Công nghệ tiên tiến, giá cạnh tranh.</p>
                        <a href="#" class="btn btn-outline-primary">Xem ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="/img/category3.jpg" class="card-img-top" alt="Sản phẩm 3">
                    <div class="card-body">
                        <h5 class="card-title">Đồ gia dụng</h5>
                        <p class="card-text">Tiện ích cho cuộc sống hàng ngày.</p>
                        <a href="#" class="btn btn-outline-primary">Xem ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Lợi ích khách hàng -->
    <section class="py-5 bg-light text-center">
        <div class="container">
            <h2 class="mb-4">Tại sao chọn chúng tôi?</h2>
            <div class="row">
                <div class="col-md-4">
                    <i class="fa fa-truck fa-3x text-primary"></i>
                    <h5 class="mt-3">Giao hàng nhanh</h5>
                    <p>Miễn phí vận chuyển đơn hàng trên 500K.</p>
                </div>
                <div class="col-md-4">
                    <i class="fa fa-shield-alt fa-3x text-primary"></i>
                    <h5 class="mt-3">An toàn & Đảm bảo</h5>
                    <p>Sản phẩm chính hãng, hoàn tiền nếu lỗi.</p>
                </div>
                <div class="col-md-4">
                    <i class="fa fa-thumbs-up fa-3x text-primary"></i>
                    <h5 class="mt-3">Khách hàng hài lòng</h5>
                    <p>Hỗ trợ 24/7, hoàn trả dễ dàng.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Đăng ký nhận tin -->
    <section class="text-center py-5">
        <div class="container">
            <h2 class="mb-4">Đăng ký nhận khuyến mãi</h2>
            <p>Nhận thông tin ưu đãi & giảm giá sớm nhất.</p>
            <form class="d-flex justify-content-center">
                <input type="email" class="form-control w-50 me-2" placeholder="Nhập email của bạn">
                <button type="submit" class="btn btn-primary">Đăng ký</button>
            </form>
        </div>
    </section>
</div>
