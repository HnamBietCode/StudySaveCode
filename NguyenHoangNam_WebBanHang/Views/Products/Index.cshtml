@model IEnumerable<NguyenHoangNam_WebBanHang.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center my-4">Danh sách sản phẩm</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> Thêm sản phẩm mới</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="text-danger fw-bold">@item.Price.ToString("N0") đ</p>
                        <p class="card-text text-muted">@item.Description</p>
                        <p><span class="badge bg-primary">@item.Category.Name</span></p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
